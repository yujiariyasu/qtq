<% provide(:title, @title) %>
<%= render partial: 'common/header' %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= image_tag user_avatar_or_default(@user) %>
      <h1><%= @user.name %></h1>
      <span><%= link_to "view my profile", @user %></span>
    </section>
    <section class="stats">
      <% if @users.any? %>
        <div class="user_avatars">
          <% @users.each do |user| %>
            <%= link_to user do %>
              <%= image_tag user_avatar_or_default(@user) %>
            <% end %>
          <% end %>
        </div>
      <% end %>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @users.any? %>
      <ul class="users follow">
        <%#= render @users %>
      </ul>
    <% end %>
  </div>
</div>